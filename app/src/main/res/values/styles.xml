<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/calc_button_background</item>
    </style>


    <style name="CalcButton.Number">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/number_button_background</item>
    </style>


    <style name="CalcButton.Operation">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/operation_button_background</item>
    </style>
</resources>